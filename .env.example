# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/gamefinder

# Firebase Storage Configuration (for image uploads)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email@your-project-id.iam.gserviceaccount.com
# Note: For FIREBASE_PRIVATE_KEY, you can use either format:
# 1. With literal \n: "-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"
# 2. With actual newlines (multiline string in quotes)
# The system will automatically normalize the key format and handle various quote styles.
# IMPORTANT: The private key MUST have the BEGIN and END markers on separate lines.
# Example of correct format with literal \n:
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Alternative: Use one of these methods instead of individual environment variables above
# FIREBASE_SERVICE_ACCOUNT_JSON='{"type":"service_account", "project_id": "...", ...}'
# FIREBASE_SERVICE_ACCOUNT_BASE64=<base64-encoded-service-account-json>
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Firebase Authentication (client-side)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id

# Email Configuration (if using)
RESEND_API_KEY=your-resend-api-key

# Application URL (for social sharing)
NEXT_PUBLIC_APP_URL=https://thegatheringcall.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Add other environment variables as needed
